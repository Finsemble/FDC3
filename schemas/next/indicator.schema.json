{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://fdc3.finos.org/schemas/next/indicator.schema.json",
  "type": "object",
  "title": "Indicator",
  "allOf": [{ "$ref": "context.schema.json#/" }],
  "properties": {
    "type": { "const": "fdc3.indicator" },
    "name": { "type": "string" },
    "parameters": {
      "type": "object",
      "properties": {
        "period": { "type": "number" },
        "matype": { "type": "string" },
        "field": { "type": "string" },
        "instrument": { "$ref": "instrument.schema.json#/" },
        "custom": {
          "type": "object",
          "properties": {
            "vendor":  { "type": "string" },
            "fields": {
              "type": "object",
              "properties": {}
            }
          }
        }
      }
    }
  },
  "required": ["name"]
}
