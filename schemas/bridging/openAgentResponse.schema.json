{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://fdc3.finos.org/schemas/next/bridging/openAgentResponse.schema.json",
  "title": "Open Agent Response",
  "type": "object",
  "allOf": [
    {
      "oneOf": [
        { "$ref": "#/$defs/OpenResponseBase" },
        { "$ref": "#/$defs/OpenResponseError" }
      ]
    },{
      "$ref": "agentResponse.schema.json"
    }
  ],
  "$defs": {
    "OpenResponseBase": {
      "title": "Open Response",
      "type": "object",
      "description": "A response to an open request",
      "properties": {
        "type": {
          "title": "Open Response Message Type",
          "const": "openResponse"
        },
        "payload": {
          "title": "Open Response Payload",
          "type": "object",
          "properties": {
            "appIdentifier": {
              "$ref": "../api/api.schema.json#/definitions/AppIdentifier"
            }
          },
          "required": ["appIdentifier"],
          "additionalProperties": false
        },
        "meta": {
          "title": "Open Response Metadata",
          "type": "object"
        }
      },
      "additionalProperties": false
    },
    "OpenResponseError": {
      "title": "Open Error Response",
      "type": "object",
      "description": "An error response to an open request",
      "properties": {
        "type": {
          "title": "Open Response Message Type",
          "const": "openResponse"
        },
        "payload": {
          "title": "Open Error Payload",
          "type": "object",
          "properties": {
            "error": {
              "title": "Open Error Message",
              "oneOf": [
                { "$ref": "../api/api.schema.json#/definitions/OpenError" },
                { "$ref": "../api/api.schema.json#/definitions/BridgingError" }
              ]
            }
          },
          "required": ["error"],
          "additionalProperties": false
        },
        "meta": {
          "title": "Open Response Metadata",
          "type": "object"
        }
      },
      "additionalProperties": false
    }
  }
}
