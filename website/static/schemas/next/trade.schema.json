{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://fdc3.finos.org/schemas/next/trade.schema.json",
  "type": "object",
  "title": "Trade",
  "allOf": [{ "$ref": "context.schema.json#/" }],
  "properties": {
    "type": { "const": "fdc3.trade" },
    "name": { "type": "string" },
    "tradedaterange": { "$ref": "dateRange.schema.json#/" },
    "settledaterange": { "$ref": "dateRange.schema.json#/" },
    "units": { "type": "number" },
    "open": { "$ref": "valuation.schema.json#/" },
    "close": { "$ref": "valuation.schema.json#/" },
    "location": { "type": "string" },
    "account": { "type": "string" }
  },
  "required": ["tradedaterange","units","open"]
}
